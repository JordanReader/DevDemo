        <Button x:Name="Negate_btn" Content="More..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Negate_btn_Click" Margin="547,372,0,0"/>
        <Button x:Name="Sorin_btn" Content="More..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"  Click="Sorin_btn_Click" Margin="646,372,0,0" RenderTransformOrigin="0.516,0.823"/>

